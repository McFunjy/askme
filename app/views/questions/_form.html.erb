<% if @question.errors.any? %>
  <div class="mt">
    <% @question.errors.full_messages.each do |message| %>
      <p class="mb-sm text-red"><%= message %></p>
    <% end %>
  </div>
<% end %>

<%= form_with model: @question, data: {turbo: false} do |form| %>
  <%= form.hidden_field :user_id %>

  <p><%= form.label :body, 'Текст вопроса' %></p>
  <p><%= form.text_area :body, rows: 2, class: 'form-text-area' %></p>

  <p class="mt">
    <%= form.submit 'Сохранить', class: 'button button-main' %> или <%= link_to 'вернуться', :back %>
  </p>
<% end %>